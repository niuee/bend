{
  "compilerOptions": {
      "target": "es6",
      "baseUrl": "./",
      "esModuleInterop": true,
      "outDir": "./build",
      "strict": false,
      "moduleResolution": "node",
      "paths": {
          "src": ["src"],
          "src/*": ["src/*"],
          "coordinate-conversion": ["src/board-camera/coordinate-conversion"]
      },
      "resolveJsonModule": true,
      "lib": ["es6", "dom"],
      "typeRoots": ["node_modules/@types"],
      "noEmitOnError": true,
      "noImplicitAny": true
  },
  "include": [ "src/**/*", "devserver/**/*", "tests/**/*" ],
  "exclude": ["node_modules",  "dist", "build"]
}
